@page
@model Gestion_Scolarite.Pages.Modules.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Module</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Module.ID" />
            <div class="form-group">
                <label asp-for="Module.Code" class="control-label"></label>
                <input asp-for="Module.Code" class="form-control" />
                <span asp-validation-for="Module.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Module.Designation" class="control-label"></label>
                <input asp-for="Module.Designation" class="form-control" />
                <span asp-validation-for="Module.Designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Module.Semestre" class="control-label"></label>
                <select asp-for="Module.Semestre" class="form-control" asp-items="ViewBag.Semestre"></select>
                <span asp-validation-for="Module.Semestre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Module.Responsable" class="control-label"></label>
                <select asp-for="Module.EnseignantID" class="form-control" asp-items="ViewBag.Responsable"></select>
                <span asp-validation-for="Module.EnseignantID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-idFiliere="@Model.IdFil" asp-route-idNiveau="@Model.IdNiv">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
