@page
@model Gestion_Scolarite.Pages.EnseignantVues.EnseignantNotes.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutEnseignant.cshtml";
}

<h1>Edit</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Note.ID" />
            <div class="form-group">
                <label asp-for="Note.Etudiant" class="control-label"></label>
                <select asp-for="Note.EtudiantID" class="form-control" asp-items="ViewBag.EtudiantID"></select>
                <span asp-validation-for="Note.EtudiantID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Note_Initiale" class="control-label"></label>
                <input asp-for="Note.Note_Initiale" class="form-control" />
                <span asp-validation-for="Note.Note_Initiale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-idMatiere="@Model.IdMat">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
