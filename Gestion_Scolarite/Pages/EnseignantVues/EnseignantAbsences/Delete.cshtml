@page
@model Gestion_Scolarite.Pages.EnseignantVues.EnseignantAbsences.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_LayoutEnseignant.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Absence</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Absence.Seance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Absence.Seance.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Absence.Etudiant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Absence.Etudiant.Nom) @Html.DisplayFor(model => model.Absence.Etudiant.Prenom)
        </dd>
        <dt class="col-sm-2">
            Absence Justifié ?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Absence.Absence_Justifie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Absence.justification)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Absence.justification)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Absence.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-idMatiere="@Model.IdMat" asp-route-idSeance="@Model.IdSe">Back to List</a>
    </form>
</div>
