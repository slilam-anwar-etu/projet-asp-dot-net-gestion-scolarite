@page
@model Gestion_Scolarite.Pages.EtudiantVues.EtudiantSeancesModel

@{
    ViewData["Title"] = "Seances";
    Layout = "~/Pages/Shared/_LayoutEtudiant.cshtml";
}

<h2>@Model.Matiere.Code: @Model.Matiere.Designation | Seances</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Type
            </th>
            <th>
                Durée
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Seance)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Seance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Heures) h :  @Html.DisplayFor(modelItem => item.Minutes) min
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="./EtudiantMatieres" asp-route-idModule="@Model.IdMod">Back to Matières</a>
</div>