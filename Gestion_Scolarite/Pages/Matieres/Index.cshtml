@page
@model Gestion_Scolarite.Pages.Matieres.IndexModel

@{
    ViewData["Title"] = "Matieres";
}

<h2>@Model.Module.Code: @Model.Module.Designation</h2>
<h3>Matières</h3>

<p>
    <a asp-page="Create" asp-route-idFiliere="@Model.IdFil" asp-route-idNiveau="@Model.IdNiv" asp-route-idModule="@Model.IdMod">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matiere[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matiere[0].Designation)
            </th>
            <th>
                Volume Horaire
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matiere[0].Enseignant)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Matiere) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolumeHoraire) (heures)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enseignant.Nom) @Html.DisplayFor(modelItem => item.Enseignant.Prenom)
            </td>
            <td>
                <a asp-page="/Seances/Index" asp-route-idFiliere="@Model.IdFil" asp-route-idNiveau="@Model.IdNiv" asp-route-idModule="@Model.IdMod" asp-route-idMatiere="@item.ID">Séances</a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-idFiliere="@Model.IdFil" asp-route-idNiveau="@Model.IdNiv" asp-route-idModule="@Model.IdMod" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-idFiliere="@Model.IdFil" asp-route-idNiveau="@Model.IdNiv" asp-route-idModule="@Model.IdMod" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-idFiliere="@Model.IdFil" asp-route-idNiveau="@Model.IdNiv" asp-route-idModule="@Model.IdMod" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-page="/Modules/Index" asp-route-idFiliere="@Model.IdFil" asp-route-idNiveau="@Model.IdNiv">Back to Modules</a>
</div>