            <div class="form-group">
                <label asp-for="Etudiant.Telephone" class="control-label"></label>
                <input asp-for="Etudiant.Telephone" class="form-control" />
                <span asp-validation-for="Etudiant.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.Password" class="control-label"></label>
                <input asp-for="Etudiant.Password" class="form-control" />
                <span asp-validation-for="Etudiant.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
