    </div>
</div>

<div>
    <a asp-page="Index" asp-route-idFiliere="@Model.IdFil" asp-route-idNiveau="@Model.IdNiv">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
