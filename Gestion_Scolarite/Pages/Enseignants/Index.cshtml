@page
@model Gestion_Scolarite.Pages.Enseignants.IndexModel

@{
    ViewData["Title"] = "Enseignants";
}

<h2>Departement @Model.Departement.Code: @Model.Departement.Designation</h2>
<h3>Enseignants</h3>

<p>
    <a asp-page="Create" asp-route-idDepartement="@Model.IdDept">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enseignant[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enseignant[0].Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enseignant[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enseignant[0].Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enseignant[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enseignant[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Enseignant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-idDepartement="@Model.IdDept" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-idDepartement="@Model.IdDept" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-idDepartement="@Model.IdDept" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-page="/Departements/Index" >Back to Departements</a>
</p>